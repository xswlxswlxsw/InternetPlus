/**index.wxss**/

page {
  background-color: #ece4e3;
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
}

.top_image {
  width: 100%;
}

.function_container {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
}

.menu-item {
  width: 100%;
  height: 110px;
  display: flex;
  flex-direction: row;
  background-color: #faf9d2;
  margin-bottom: 5px;
  position: relative;
  justify-content: center;
  align-items: center;
}

.img {
  width: 110px;
  left: 0%;
  top: 0%;
  position: absolute;
}

.text {
  font-size: 36px;
  font-family: 'Courier New', Courier, monospace;
  position: absolute;
  margin: -30px 0 0 60px;
  left:100px;
}

.top_bg{
  height: 75px;
}