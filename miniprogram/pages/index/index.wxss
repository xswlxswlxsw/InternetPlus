/**index.wxss**/

page {
  padding-top: 54rpx; 
  padding-bottom: 60rpx;
  background-color: #faf9d2;
}

.container {
  width: 100%;
  height: 100%;
  align-items: center;
}

.function_container{
  width: 90%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
}
.menu{
    display: flex;        /*弹性布局*/
    flex-wrap: wrap;     /*允许换行*/
    width: 100%;
    margin-top: 15px;
}
.background{
  width:100%;
  height: 30%;
  background-color: #fff;
  border-radius: 20px;
  display: flex;  
}
.menu-item{
  width: 50%;      
  height: 30%;
  box-sizing: border-box;
  display:flex;
  justify-content:center;
  flex-direction:column;
  text-align: center;
}
.img{
  width:100%;   /*25%的100%*/
  height:30%;
}
text{
  font-size: 20px;
  font-family: 'Courier New', Courier, monospace;
}
.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  
  border-radius: 15px;
  background-color: #fff;
}

.search-input {
  height: 30px;
  padding: 0 10px;
 
}

.search-button {
  height: 30px;
  padding: 3px 10px;
  background-color: #c5d99b;
  color: #fff;
  border: none;
  border-radius: 10px;
  width:60px !important;
}