/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #faf9d2;
  padding-bottom: 60rpx;
}

.container {
  font-family: PingFang SC;
}
.function_container{
  width: 90%;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC;
}
.menu{
  display: flex;        /*弹性布局*/
  flex-wrap: wrap;     /*允许换行*/
  width: 100%;
  margin-top: 10px;
  justify-content: center;
}
.menu2{
  width: 90%;
  height: 100px;
  margin-top: 10px;
  border-radius: 15px;
  background-color: #fff;
}
.menu3 {
  display: flex; /* 使用Flex布局 */
  align-items: center; /* 垂直居中 */
  justify-content: center; /* 水平居中 */
  width: 90%;
  height: 50px;
  margin-top: -10px;
  border-radius: 15px;
  background-color: #a1ae8b;
  text-align: center;
  font-size: 24px;
  color: #fff;
}

.menu-item{
width: 40%;
box-sizing: border-box;
display:flex;
justify-content:center;
flex-direction:column;
text-align: center;
border-radius: 15px;
background-color: #fff;
margin: 5px 10px 10px 10px; /* 控制间距，不改变水平居中效果 */
}


.img{
width:100%;   
}

.text{
  font-size: 18px;
  position: relative;
  margin-top: 10px;
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  border-radius: 15px;
  background-color: #fff;
}

.search-input {
  height: 30px;
  padding: 0 10px;
 
}

.search-button {
  height: 30px;
  padding: 3px 10px;
  background-color: #c5d99b;
  color: #fff;
  border: none;
  border-radius: 10px;
  width:60px !important;
}

.top_bg{
  height: 75px;
}