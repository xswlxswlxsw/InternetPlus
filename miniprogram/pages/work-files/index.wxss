/* pages/work-files/index.wxss */
.page_container {
  background-color: #faf9d2;
  height: 100vh;
}

.top_image {
  width: 90%;
  margin: 15px;
}

.menu {
  display: flex;
  /*弹性布局*/
  flex-wrap: wrap;
  /*允许换行*/
  width: 93%;
  border-radius: 15px;
  margin: 10px 10px 10px 10px;
  justify-content: center;
}

.menu-item {
  width: 50%;
  height: 30%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.img {
  width: 85%;
  height: 30%;
  border-radius: 90px;
  margin-top: 20px;
}

text {
  font-size: 20px;
  font-family: 'Courier New', Courier, monospace;
}